<%- include('partials/header') %>

<div class="container">
    <h2>Regisztráció</h2>
    
    <% if (typeof error !== 'undefined') { %>
        <p style="color:red"><%= error %></p>
    <% } %>

    <form method="POST" action="<%= BASE_PATH %>/regisztracio">
        <input type="text" name="username" placeholder="Felhasználónév" required><br><br>
        <input type="password" name="password" placeholder="Jelszó" required><br><br>
        <button type="submit">Regisztrálok</button>
    </form>
    
    <p>Már van fiókod? <a href="<%= BASE_PATH %>/bejelentkezes">Bejelentkezés</a></p>
</div>

<%- include('partials/footer') %>